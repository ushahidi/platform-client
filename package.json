{
  "name": "ushahidi-platform-client",
  "version": "1.0.0",
  "description": "Ushahidi Platform Official Web Client",
  "scripts": {
    "build": "npm run build:api && npm run build:utilities && npm run build:legacy && npm run build:root && npm run copy && npm run generate:import-map",
    "build:api": "cd api && npm run build",
    "build:root": "cd root && npm run build",
    "build:legacy": "cd legacy && npm run build",
    "build:utilities": "cd utilities && npm run build",
    "copy": "mkdir -p build && npm run copy:api && npm run copy:utilities && npm run copy:root && npm run copy:legacy",
    "copy:api": "cp -R api/dist/* build/",
    "copy:root": "cp -R root/dist/* build/",
    "copy:legacy": "cp -R legacy/dist/* build/",
    "copy:utilities": "cp -R utilities/dist/* build/",
    "generate:import-map": "node ./server/scripts/generateImportMap.js",
    "lint": "npm run lint:legacy && npm run lint:utilities && npm run lint:api && npm run lint:root",
    "lint:api": "cd api && npm run lint",
    "lint:legacy": "cd legacy && npm run lint",
    "lint:root": "cd root && npm run lint",
    "lint:utilities": "cd utilities && npm run lint",
    "format": "npm run format:legacy && npm run format:utilities && npm run format:api && npm run format:root",
    "format:api": "cd api && npm run format",
    "format:root": "cd root && npm run format",
    "format:legacy": "cd legacy && npm run eslintfix",
    "format:utilities": "cd utilities && npm run format",
    "install:all": " npm install && cd api && npm install && cd .. && cd root && npm install && cd .. && cd legacy && npm install && cd .. && cd utilities && npm install && cd ..",
    "serve": "node ./server/scripts/start.js && concurrently \"npm run serve:apps\" \"npm run serve:base-wait\" \"npm run show-ready\"",
    "serve:apps": "concurrently \"npm run watch:legacy\" \"npm run serve:modules\"",
    "serve:modules": "concurrently \"npm run serve:api\" \"npm run serve:utilities\"",
    "serve:base": "concurrently \"npm run serve:root\" \"npm run serve:proxy\"",
    "serve:base-wait": "wait-on http://0.0.0.0:9093 && wait-on http://0.0.0.0:9094 && npm run serve:base",
    "serve:proxy": "env-cmd node ./server/scripts/proxy.js",
    "serve:api": "cd api && npm start",
    "serve:legacy": "cd legacy && npm start",
    "serve:root": "cd root && npm start",
    "serve:utilities": "cd utilities && npm start",
    "show-ready": "wait-on http://0.0.0.0:3000 && node ./server/scripts/ready.js",
    "start": "http-server ./build -c-1",
    "test": "npm run test:legacy",
    "test:legacy": " cd legacy && npm run test",
    "watch:legacy": "cd legacy && concurrently \"npm run watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ushahidi/platform-client.git"
  },
  "author": "Ushahidi",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/ushahidi/platform-client/issues"
  },
  "homepage": "https://github.com/ushahidi/platform-client#readme",
  "devDependencies": {
    "address": "^1.2.0",
    "colors": "^1.4.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "express": "^4.18.1",
    "http-proxy-middleware": "^2.0.6",
    "http-server": "^0.12.3",
    "wait-on": "^5.3.0"
  }
}
